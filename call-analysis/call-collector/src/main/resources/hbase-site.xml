<configuration>

    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>

    <!-- hbase 根路径-->
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://localhost:9000/apps/hbase-cdh</value>
    </property>

    <!-- 与zoo.cnf中配置的数据目录保存一致-->
    <property>   
        <name>hbase.zookeeper.quorum</name>
        <value>localhost</value>
    </property>
     
    <!-- 与zoo.cnf中配置的数据目录保存一致-->
    <property>   
           <name>hbase.zookeeper.property.dataDir</name>
        <value>/Users/huhao/software/zookeeper-3.4.5/data</value>
    </property>

    <property>
        <name>hbase.coprocessor.region.classes</name>
        <value>com.big.data.call.collect.HBaseCoprocessor</value>
    </property>


</configuration>
